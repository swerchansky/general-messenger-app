<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageField" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="MainName" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/teal</item>
    </style>

    <style name="Message">
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="SideInfo" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/side_info</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="Time" parent="SideInfo">
        <item name="android:textSize">10sp</item>
    </style>

</resources>